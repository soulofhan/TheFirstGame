<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_user_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/main_userName"
        app:layout_constraintStart_toEndOf="@+id/btn_user_ic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/main_userID"
        android:textColor="#FFFFF822"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/btn_user_ic"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/diamond" />

        <TextView
            android:id="@+id/tv_diamond"
            style="@style/main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_currency" />

        <Button
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/gold" />

        <TextView
            android:id="@+id/tv_gold"
            style="@style/main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_currency" />

        <Button
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/point_coupon" />

        <TextView
            android:id="@+id/tv_ticket"
            style="@style/main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_currency" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_store"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_guild"
            style="@style/main_center_button"
            android:layout_height="190dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/guild" />

        <Button
            android:id="@+id/btn_eventCenter"
            style="@style/main_center_button"
            android:layout_height="190dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/event_center" />

        <Button
            android:id="@+id/btn_gameCenter"
            style="@style/main_center_button"
            android:layout_height="190dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/game_center" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_email_number"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/red_dot"
        android:gravity="center"
        android:text="@string/main_emailNumber"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">


        <Button
            android:id="@+id/btn_email"
            style="@style/main_bottom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:drawableTop="@drawable/mail"
            android:drawablePadding="5dp"
            android:text="@string/main_email" />

        <Button
            android:id="@+id/btn_event"
            style="@style/main_bottom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:drawableTop="@drawable/event"
            android:drawablePadding="5dp"
            android:text="@string/main_event" />

        <Button
            android:id="@+id/btn_backpack"
            style="@style/main_bottom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:drawableTop="@drawable/knapsack"
            android:drawablePadding="5dp"
            android:text="@string/main_backpack" />

        <Button
            android:id="@+id/btn_setting"
            style="@style/main_bottom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:drawableTop="@drawable/settings"
            android:drawablePadding="5dp"
            android:text="@string/main_settings" />

        <Button
            android:id="@+id/btn_share"
            style="@style/main_bottom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="5dp"
            android:drawableTop="@drawable/share_ic"
            android:drawablePadding="5dp"
            android:text="@string/main_share" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>