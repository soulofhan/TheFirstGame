<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".MainActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_user_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/tv_user_name"
        style="@style/main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="新哥丢丢丢"
        app:layout_constraintStart_toEndOf="@+id/iv_user_ic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ID:320165"
        android:textColor="#FFFFF822"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_user_ic"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/diamond" />

        <TextView
            android:id="@+id/tv_diamond"
            style="@style/main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000W" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/gold" />

        <TextView
            android:id="@+id/tv_gold"
            style="@style/main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000W" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="30dp"
            app:srcCompat="@drawable/point_coupon" />

        <TextView
            android:id="@+id/tv_ticket"
            style="@style/main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000W" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_store"
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/store"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_guild"
            android:layout_width="178dp"
            android:layout_height="197dp"
            android:background="@drawable/guild" />

        <Button
            android:id="@+id/btn_eventCenter"
            android:layout_width="178dp"
            android:layout_height="197dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/event_center" />

        <Button
            android:id="@+id/btn_gameCenter"
            android:layout_width="178dp"
            android:layout_height="197dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/game_center" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/red_dot"
        android:text="99"
        android:textColor="#FFFFFFFF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.3">


        <Button
            android:id="@+id/btn_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/mail"
            android:drawablePadding="5dp"
            android:text="邮件"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/event"
            android:drawablePadding="5dp"
            android:text="活动"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_backpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/knapsack"
            android:drawablePadding="5dp"
            android:text="背包"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/settings"
            android:drawablePadding="5dp"
            android:text="设置"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/share_ic"
            android:drawablePadding="5dp"
            android:text="分享"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>